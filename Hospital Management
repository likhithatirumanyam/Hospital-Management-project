#include<stdio.h>
#include<stdlib.h>
#include<string.h>

#define MAX_DOCTOR 5
#define MAX_PATIENT 20
struct doctor{
    char name[20],specialization[20];
    int experiance;
};
struct patient{
    char name[20],disease[20];
    int age;
};
struct appointment{
    char pname[20];
    char date[30];
};
struct testmgmt{
    char pname[20];
};
struct billingsys{
    int days;
    char pname[20];
    float fee,tcost,charges,total;
};
struct doctor doctors;
struct patient patients;
struct appointment ap;
struct testmgmt tm;
struct billingsys bs;
int doctorcount=0,votercount=0;
void adddoctors()
{
 printf("enter the name of the doctor:");
 scanf("%s",doctors.name);
 printf("enter specialization:");
 scanf("%s",doctors.specialization);
printf("enter experiance:");
scanf("%d",&doctors.experiance);
}
void viewdoctors()
{
    printf("doctor name %s|specialization %s|experiance %d\n",doctors.name,doctors.specialization,doctors.experiance);
}
void addpatients()
{
    printf("enter the name of the patients:");
    scanf("%s",&patients.name);
    printf("enter age:");
    scanf("%d",&patients.age);
    printf("enter the disease:");
    scanf("%s",&patients.disease);
}
void managepatients()
{
    printf("patient name %s|age %d|disease %s",patients.name,patients.age,patients.disease);
}
void scheduleapp()
{
    printf("enter patients name:");
    scanf("%s",&ap.pname);
    printf("enter the date(DD/MM/YY):");
    scanf("%s",&ap.date);
    printf("the available doctor is:");
    printf("doctor name %s|specialization %s|experiance %d\n",doctors.name,doctors.specialization,doctors.experiance);
    printf("to assign doctor(enter doctor name):%s");
    printf("appointment scheduled successfully....!!");
}
void viewapp()
{
    printf("scheduled appointment is:");
    printf("patient name %s|doctor name %s|date %s \n",ap.pname,doctors.name,ap.date);
}
void assigntests()
{
   printf("enter patient name:%s",tm.pname);
   printf("available tests:\n");
   printf("1.blood test-500/-\n2.x-ray-700/-\n3.fever test-300/-\n");
   int n;
   printf("enter the number of tests:\n");
   scanf("%d",&n);
   for(int i=0;i<n;i++){
    int testnumber;
    printf("enter testnumber:\n");
    scanf("%d",&testnumber);
    switch(testnumber){
        case 1:printf("test assigned:blood test\n");
                break;
        case 2:printf("assigned test:x-ray\n");
                break;
        case 3:printf("test assigned:fever test\n");
                break;
        default:printf("invalid entry\n");
    }
       }
}
void generatebill()
{
    printf("enter patient name:");
    scanf("%s",&bs.pname);
    printf("enter number of days in hospital:");
    scanf("%d",&bs.days);
    printf("final bill for");
    printf("consultation fees:");
    scanf("%f",&bs.fee);
    printf("tests cost:");
    scanf("%f",&bs.tcost);
    printf("hospital stay charges:");
    scanf("%f",&bs.charges);
    printf("-----------------------------------------\n");
    printf("total bill:");
    scanf("%f",&bs.total);
}
int main()
{
    int choice,v;
    do{
    printf("\n___WELCOME TO HOSPITAL SYSTEM MANAGEMENT____\n");
    printf("1.manage doctors\n2.manage patients\n3.appoitment system\n4.test management\n5.billing system\n6.exit\n");
    printf("enter your choice:");
    scanf("%d",&choice);
    switch(choice){
        case 1:printf("1.add doctors\n2.view doctors\nenter your choice:");
                scanf("%d",&v);
                if(v==1){
                    adddoctors();   
                }
                else{
                    viewdoctors();
                }
                break;
        case 2:printf("1.add patients\n2.manage/viewpatients\nenter youur choice:");
                scanf("%d",&v);
                if(v==1){
                    addpatients();
                }
                else{
                    managepatients();
                }
                break;
        case 3:printf("1.schedule appointments\n2.view appointments\nenter your choice:");
                scanf("%d",&v);
                if(v==1){
                    scheduleapp();
                }
                else{
                    viewapp();
                }
                break;
        case 4:printf("test management\n");
                assigntests();
                break;
        case 5:printf("billing system\n");
                generatebill();
                break;
        default:printf("invalid entry\n");
        }
    }while(choice!=5);
        return 0;
}
